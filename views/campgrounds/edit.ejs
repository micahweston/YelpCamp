<% layout('layouts/boilerplate') %> <!--This injects our content into our boilerpoint.ejs layout. This allows us to only have to update one file when we want to add content-->
<div class="row">
    
    <div class="col-8 offset-2 col-md-6 offset-md-3"> 
        <div class="card shadow">
            <img src="https://images.unsplash.com/photo-1530208381868-2128097819a2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1170&q=80" 
                    alt="" class="card-img-top">
            <div class="card-body">
                <h1 class="card-title text-center">Edit Campground</h1>
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %> " required>
                        <div class="valid-feedback">
                            Perfect!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a campground name.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %> " required>
                        <div class="valid-feedback">
                            Perfect!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a campground location.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Add Pictures</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                        <div class="valid-feedback">
                            Perfect!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a valid image URL.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input type="text" class="form-control" aria-label="price" 
                                aria-describedby="price-label" name="campground[price]" value="<%= campground.price %> " required>
                            <div class="valid-feedback">
                                Perfect!
                            </div>
                            <div class="invalid-feedback">
                                Please choose a valid price.
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="campground[description]" required><%= campground.description %></textarea>
                        <div class="valid-feedback">
                            Perfect!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a description.
                        </div>
                    </div>
                    <div class="mb-3">
                        <% campground.images.forEach(function(img, i) { %> 
                            <img src="<%= img.thumbnail %> " alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                            </div>
                            <label for="image-<%= i %>">Delete?</label>
                        <% }) %> 
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info text-white" type="submit">Update Campground</button>
                    </div>
                </form>
                <a href="/campgrounds/<%= campground._id %> ">Back to Campground</a>
            </div>
        </div>
    </div>
</div>
