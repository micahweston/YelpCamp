<% layout('layouts/boilerplate') %> <!--This injects our content into our boilerpoint.ejs layout. This allows us to only have to update one file when we want to add content-->
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3"> 
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Campground Name</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    Perfect!
                </div>
                <div class="invalid-feedback">
                    Please enter a campground name.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    Perfect!
                </div>
                <div class="invalid-feedback">
                    Please choose a campground location.
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add Pictures</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
                <div class="valid-feedback">
                    Perfect!
                </div>
                <div class="invalid-feedback">
                    Please choose a valid image.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required>
                    <div class="valid-feedback">
                        Perfect!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a valid price.
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Perfect!
                </div>
                <div class="invalid-feedback">
                    Please choose a description.
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>
</div>


